<Page x:Class="KDZGame.DefeatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KDZGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefeatPage">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid>
            <Image Source="86e56696cc8816e49fb8d595a6e34ed7.jpg" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,-120"/>
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,40">
                <Button x:Name="endBtn" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Center" MinWidth="200" MinHeight="120" Margin="0" FontFamily="Viner Hand ITC" FontSize="36" Background="#800000" Click="endBtn_Click" Foreground="#000000"/>
            </StackPanel>
            <TextBox x:Name="massageBox" HorizontalAlignment="Center" Height="200" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Background="Transparent" FontSize="72" FontFamily="Viner Hand ITC" Foreground="#DC143C" Margin="0,100,0,0" TextAlignment="Center" Text="Defeat"/>
            <Frame x:Name="Main" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>
</Page>
