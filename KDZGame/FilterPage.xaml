<Page x:Class="KDZGame.FilterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KDZGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FilterPage" Width="Auto" Height="Auto">

    <Viewbox HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top">
        <Grid>
            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Source="v7ZYfy.jpg" Margin="0,0,0,-30"/>
            <DataGrid x:Name="heroData" HorizontalAlignment="Left" Height="150" VerticalAlignment="Center" Width="250" Margin="10,160,0,0" FontFamily="Viner Hand ITC" FontSize="14" Background="#C0C0C0" Opacity="0.6"/>
            <Button x:Name="generateDataBtn" Content="Generate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="10,135,0,0" Height="25" FontFamily="Viner Hand ITC" FontSize="14" Background="#C0C0C0" Click="generateDataClick"/>

        </Grid>
    </Viewbox>
</Page>
